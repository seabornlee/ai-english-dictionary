{
  "name": "ai-dic-server",
  "version": "1.0.0",
  "description": "Backend server for AI Dictionary application",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "mocha 'tests/**/*.test.js' --reporter mochawesome --reporter-options reportDir=test-reports,reportFilename=test-report --exit",
    "test:ci": "mocha 'tests/**/*.test.js' --reporter mocha-junit-reporter --reporter-options mochaFile=./test-reports/junit.xml --exit",
    "test:watch": "mocha 'tests/**/*.test.js' --watch"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "mocha": "^11.2.2"
  },
  "devDependencies": {
    "chai": "^5.2.0",
    "mocha": "^11.2.2",
    "mocha-junit-reporter": "^2.2.1",
    "mochawesome": "^7.1.3",
    "nodemon": "^3.0.1",
    "sinon": "^18.0.1",
    "supertest": "^6.3.3"
  }
}
